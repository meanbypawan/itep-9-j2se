<html>
    <head>
        <%-include('__bootstrap.ejs')%>
    </head>
    <body>
        <%-include('__header.ejs')%>
        <div class="container mt-4">
            <form action="/product/edit-product" method="post">
                <input type="hidden" name="id" value="<%=product.id%>"/>
                <div class="form-group">
                    <input value="<%=product.title%>" name="title" type="text" placeholder="Enter product title" class="form-control"/>
                </div>
                <div class="form-group">
                    <input value="<%=product.price%>" name="price" type="text" placeholder="Enter product price" class="form-control"/>
                </div>
                <div class="form-group">
                  <button class="btn btn-success">UPDATE</button>
                </div>
            </form>
        </div>
    </body>
</html>